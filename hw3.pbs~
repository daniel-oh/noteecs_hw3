# Let PBS handle your output
# -e is true if following exists
if [ -e "$PBS_NODEFILE" ]; then
   echo "I ran on: "
   cat $PBS_NODEFILE
fi
# -d is true if following is directory
if [ -d "$PBS_O_WORKDIR" ]; then
   cd "$PBS_O_WORKDIR"
fi
mpirun -np 6 --oversubscribe ./reduce_avg 100
